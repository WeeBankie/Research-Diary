title = "Detection of high energy cosmic rays with the resonant gravitational wave detectors \{NAUTILUS\} and \{EXPLORER\} ",
journal = "Astroparticle Physics ",
volume = {{\bf30}},
number = "4",
pages = "200 - 208",
year = "2008",
note = "",
issn = "0927-6505",
