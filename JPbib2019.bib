@article{DeSanctis719,
	author = {De Sanctis, M. C. and Ammannito, E. and McSween, H. Y. and Raponi, A. and Marchi, S. and Capaccioni, F. and Capria, M. T. and Carrozzo, F. G. and Ciarniello, M. and Fonte, S. and Formisano, M. and Frigeri, A. and Giardino, M. and Longobardo, A. and Magni, G. and McFadden, L. A. and Palomba, E. and Pieters, C. M. and Tosi, F. and Zambon, F. and Raymond, C. A. and Russell, C. T.},
