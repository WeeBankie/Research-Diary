@article{Ward07112006,
author = {Ward, Peter and Labandeira, Conrad and Laurin, Michel and Berner, Robert A.}, 
title = {Confirmation of Romer's Gap as a low oxygen interval constraining the timing of initial arthropod and vertebrate terrestrialization},
volume = {103}, 
